-- create a ScreenGui object to hold the button
local gui = Instance.new("ScreenGui")
gui.Parent = game.CoreGui
 
-- create a TextButton object to act as the toggle button
local button = Instance.new("TextButton")
button.Text = "Enable Player ESP"
button.Position = UDim2.new(0, 0, 0, 0)
button.Size = UDim2.new(0, 200, 0, 50)
button.Parent = gui
 
-- create a boolean variable to track the button state
local playerESPToggled = false
 
-- create a function that will be called when the button is clicked
local function onButtonClicked()
    playerESPToggled = not playerESPToggled -- toggle the boolean variable
    if playerESPToggled then
        -- turn on the Player ESP feature
        print("Player ESP turned on")
        button.Text = "Disable Player ESP"
        loadstring(game:HttpGet('https://pastebin.com/raw/02JKqvcf'))()
    else
        -- turn off the Player ESP feature
        print("Player ESP turned off")
        button.Text = "Enable Player ESP"
        loadstring(game:HttpGet('https://pastebin.com/raw/WarZjgAi'))()
    end
end
 
-- connect the button's Click event to the onButtonClicked function
button.MouseButton1Click:Connect(onButtonClicked)
 
